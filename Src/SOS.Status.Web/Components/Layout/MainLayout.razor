@using System.Security.Claims
@inherits LayoutComponentBase
@inject AppSettingsState Settings
@inject TokenAccessor TokenAccessor
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject IWebHostEnvironment Environment

@* Required *@
@* <MudThemeProvider Theme="CustomTheme.MyCustomTheme" /> *@
<MudThemeProvider Theme="_themeManager.Theme" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>        
    <MudThemeManager Open="_themeManagerOpen" OpenChanged="OpenThemeManager" Theme="_themeManager" ThemeChanged="UpdateTheme"/>
    @* <MudAppBar Elevation="1"> *@
    <MudAppBar Elevation="_themeManager.AppBarElevation">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">SOS Status (@Environment?.EnvironmentName)</MudText>
        <MudSpacer />        
        <AuthorizeView>
            <Authorized>                
                <MudMenu Color="Color.Inherit" Variant="Variant.Text" EndIcon="@Icons.Material.Filled.KeyboardArrowDown" Label="@_name">
                    <MudMenuItem Label="Logout" OnClick="Logout" Icon="@Icons.Material.Outlined.Logout" />
                </MudMenu>
            </Authorized>
            <NotAuthorized>
                <MudButton Color="Color.Inherit" Variant="Variant.Text" OnClick="Login" StartIcon="@Icons.Material.Filled.Login">Login</MudButton>
            </NotAuthorized>
        </AuthorizeView>

        <MudIconButton Icon="@Icons.Material.Filled.Palette"
                       OnClick="@((e) => OpenThemeManager(true))"
                       Color="Color.Inherit"
                        />
        @* <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" /> *@
        <MudIconButton Icon="@GetDrawerIcon()"
                       OnClick="@ToggleRightDrawer"
                       Color="Color.Inherit"
                       Edge="Edge.End"
                       Title="Open/close right panel" />
    </MudAppBar>    
    @* <MudDrawer @bind-Open="_leftDrawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">*@
    <MudDrawer @bind-Open="_leftDrawerOpen" ClipMode="_themeManager.DrawerClipMode" Elevation="_themeManager.DrawerElevation">
        <NavMenu />        
    </MudDrawer>    
    <MudDrawer Anchor="Anchor.End"
                Open="@rightDrawerOpen"
                Elevation="1"
                ClipMode="DrawerClipMode.Always"
                Variant="DrawerVariant.Persistent">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Search filter</MudText>
        </MudDrawerHeader>
        <MudDrawerContainer>
            <MudNavMenu >
                <MudNavLink Href="" Match="NavLinkMatch.All" >Dataset</MudNavLink>
                <MudNavLink Href="taxafilter"><MudBadge Dot=true Color="Color.Primary" Origin="Origin.CenterRight" BadgeClass="mx-2">Taxa</MudBadge></MudNavLink>
                <MudNavLink Href="taxafilter" Match="NavLinkMatch.Prefix">Date</MudNavLink>
                <MudNavLink Href="taxafilter"><MudBadge Content="@Settings.SelectedTaxa.Count" Color="Color.Default" Origin="Origin.CenterRight" BadgeClass="mx-2">Geography</MudBadge></MudNavLink>
                <MudNavLink Href="taxafilter" Match="NavLinkMatch.Prefix">Observation properties</MudNavLink>
                <MudNavLink Href="taxafilter" Match="NavLinkMatch.Prefix">Project</MudNavLink>
                <MudButton Variant="Variant.Filled" Class="mx-2" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Primary">Clear filter</MudButton>
            </MudNavMenu>
        </MudDrawerContainer>
    </MudDrawer>
    <MudMainContent Class="pt-17 pa-4">
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body        
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    private ThemeManagerTheme _themeManager = new ThemeManagerTheme()
        {            
            DrawerClipMode = DrawerClipMode.Always,
        };

    public bool _themeManagerOpen = false;
    bool _leftDrawerOpen = true;
    private bool rightDrawerOpen = false;
    private string? _firstName;
    private string? _name;

    protected override async Task OnInitializedAsync()
    {
        Settings.OnChange += StateHasChanged;
        var token = await TokenAccessor.GetAccessTokenAsync();
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            _firstName = user.FindFirst(ClaimTypes.GivenName)?.Value;
            _name = user.FindFirst("name")?.Value;
            var userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            var lastName = user.FindFirst(ClaimTypes.Surname)?.Value;
            var email = user.FindFirst(ClaimTypes.Email)?.Value;
        }
        
        _themeManager.Theme = CustomTheme.MyCustomTheme;
        StateHasChanged();
    }    

    void OpenThemeManager(bool value)
    {
        _themeManagerOpen = value;
    }

    void UpdateTheme(ThemeManagerTheme value)
    {
        _themeManager = value;
        StateHasChanged();
    }

    void Login()
    {        
        Navigation.NavigateTo("authentication/login", forceLoad: true);        
    }

    void Logout()
    {
        Navigation.NavigateTo("/signout", forceLoad: true);        
    }
    
    void DrawerToggle()
    {
        _leftDrawerOpen = !_leftDrawerOpen;
    }

    private void ToggleRightDrawer()
    {
        rightDrawerOpen = !rightDrawerOpen;
    }

    private string GetDrawerIcon()
    {
        return rightDrawerOpen ? Icons.Material.Filled.ChevronRight : Icons.Material.Filled.MenuOpen;
    }       

    public void Dispose()
    {
        Settings.OnChange -= StateHasChanged;
    }    
}