<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <extensions>
    <add assembly="NLog.Targets.ElasticSearch"/>
  </extensions>
    <variable name="logLayout"
              value="${longdate}|${iis-site-name}|${machinename}|${aspnet-environment}|${logger}|${level:uppercase=true}|${message} ${exception:format=@}" />
  <variable name="logUserName" value="elastic" />
  <variable name="logPassword" value="" />
    <targets>
        <target xsi:type="File" name="logfileTarget"
                fileName="C:\artlog\SOS.Hangfire.JobServer.log"
                layout="${logLayout}"
                archiveEvery="Day"
                archiveNumbering="Date" />
      <target name="elasticTarget" xsi:type="BufferingWrapper" flushTimeout="5000">
        <target xsi:type="ElasticSearch" layout="${logLayout}" disableCertificateValidation="true" requireAuth="true" userName="{var:logUserName}" password="{var:logPassword}" uri="https://artsearch2-1.artdata.slu.se:9200,https://artsearch2-2.artdata.slu.se:9200,https://artsearch2-3.artdata.slu.se:9200"  index="logs-${date:format=yyyy.MM.dd}" />
      </target>
    </targets>

    <rules>
        <logger name="*" minlevel="Info" writeTo="logfileTarget" />
        <logger name="*" minlevel="Info" writeTo="elasticTarget" />
    </rules>
</nlog>